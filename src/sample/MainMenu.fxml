<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mainMenu" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #123456;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainMenu">
   <children>
      <Button fx:id="play" focusTraversable="false" layoutX="311.0" layoutY="274.0" mnemonicParsing="false" onAction="#playClicked" prefHeight="53.0" prefWidth="179.0" text="PLAY" />
      <Button fx:id="credits" focusTraversable="false" layoutX="311.0" layoutY="342.0" mnemonicParsing="false" onAction="#creditsClicked" prefHeight="53.0" prefWidth="179.0" text="CREDITS" />
      <Button fx:id="exit" focusTraversable="false" layoutX="311.0" layoutY="408.0" mnemonicParsing="false" onAction="#exitClicked" prefHeight="53.0" prefWidth="179.0" text="EXIT" />
      <ImageView fx:id="settings" fitHeight="50.0" fitWidth="50.0" layoutX="736.0" layoutY="14.0" onMouseClicked="#settingsClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/settings.png" />
         </image>
      </ImageView>
      <MenuButton fx:id="language" focusTraversable="false" layoutX="607.0" layoutY="545.0" mnemonicParsing="false" popupSide="TOP" prefHeight="41.0" prefWidth="179.0" text="English" textAlignment="RIGHT">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#greek" text="Greek">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/el.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#english" text="English(UK)">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/en.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuItem>
         </items>
         <graphic>
            <ImageView fx:id="flag" fitHeight="25.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/Images/en.png" />
               </image>
            </ImageView>
         </graphic>
      </MenuButton>
   </children>
</AnchorPane>
